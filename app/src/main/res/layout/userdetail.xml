<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_back_24" />


        <TextView
            android:id="@+id/txt_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="10dp"
            android:text="Thông tin cá nhân"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_white"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_author"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="null" />

        <TextView
            android:id="@+id/txt_userdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Emily"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_userdetail_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Tên người dùng:abcd"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/txt_userdetail_nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:text="Tên"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/nameUserEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:hint="Tên"
                android:textColorHint="#616a80"
                android:background="@drawable/rounded_corner_orange"/>
            <TextView
                android:id="@+id/txt_userdetail_phonetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:text="Số điện thoại"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/phoneUserEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:hint="Nhập số điện thoại"
                android:textColorHint="#616a80"
                android:background="@drawable/rounded_corner_orange"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonborder"
                android:textSize="15dp"
                android:text="Xóa tài khoản"
                app:backgroundTint="@null">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>


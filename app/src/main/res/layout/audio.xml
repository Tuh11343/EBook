<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_arrow_downward_24"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/txt_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Đang phát"
            android:textSize="24sp"
           />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_dots_svgrepo_com"
            android:layout_marginStart="80dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_author"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:src="@drawable/harrypotter"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test"
            >
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/share2"
                android:layout_alignParentStart="true"
                android:background=""
                />

            <TextView
                android:id="@+id/textViewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harry Potter\nJ.K. Rowling"
                android:textSize="24sp"
                android:maxLines="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/heart2"
                android:layout_alignParentEnd="true"
                android:background=""
                android:contentDescription="Yêu thích"
                />






        </RelativeLayout>




        <SeekBar
            android:id="@+id/progressBarPlayback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="1"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/Vector"
                android:background="@drawable/roundedmusic"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/buttonReplay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arrow2"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>



    </LinearLayout>



</LinearLayout>